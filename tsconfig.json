{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5", // MSIE 11 supports up to ES5
    //"jsx": "preserve", // need to pass JSX to @lingui/babel-plugin-transform-js and @lingui/babel-plugin-transform-react as-is
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "strictNullChecks": false,
    "lib": ["es6", "es7", "dom"], // APIs made available to TypeScript files
    "baseUrl": "src",
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "exclude": ["dist", "build", "node_modules"]
}
